<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment2">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">
        <RelativeLayout
            android:id="@+id/relative_view_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:padding="20dp">

            <ImageView
                android:id="@+id/iv_alphabet"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:src="@drawable/cv_alphabet"
                android:layout_alignParentTop="true" />
            <TextView
                android:id="@+id/tv_alphabet"
                android:layout_width="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:textAlignment="center"
                android:text="অ্যালফাবেট"
                android:layout_below="@+id/iv_alphabet"/>
            <Button
                android:id="@+id/btn_alphabet"
                android:layout_width="120dp"
                android:textSize="20sp"
                android:layout_height="match_parent"
                android:layout_below="@+id/tv_alphabet"
                android:textStyle="bold"
                android:layout_alignParentStart="true"
                android:text="চলো শিখি"/>

            <ImageView
                android:id="@+id/iv_bornomala"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/cv_bornomala"
                android:layout_alignParentTop="true" />
            <TextView
                android:id="@+id/tv_bornomala"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="বর্নমালা"
                android:textAlignment="center"
                android:textSize="20sp"
                android:layout_below="@+id/iv_bornomala"
                android:layout_alignParentEnd="true"/>
            <Button
                android:id="@+id/btn_bornomala"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/tv_bornomala"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="চলো শিখি"/>
            <ImageView
                android:id="@+id/iv_rhymes"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="8dp"
                android:layout_below="@+id/btn_alphabet"
                android:src="@drawable/cv_rhymes"
                android:layout_alignParentStart="true"/>
            <TextView
                android:id="@+id/tv_rhymes"
                android:layout_width="120dp"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_rhymes"
                android:textStyle="bold"
                android:text="রাইমস"
                android:textAlignment="center"
                android:layout_alignParentStart="true"/>

            <Button
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:id="@+id/btn_rhymes"
                android:layout_below="@+id/tv_rhymes"
                android:textStyle="bold"
                android:text="চলো শিখি"
                android:textSize="20sp"
                android:layout_alignParentStart="true"/>
            <ImageView
                android:id="@+id/iv_kobita"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="8dp"
                android:layout_below="@+id/btn_bornomala"
                android:src="@drawable/cv_kobita"
                android:layout_alignParentEnd="true"/>
            <TextView
                android:id="@+id/tv_kobita"
                android:layout_width="120dp"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_kobita"
                android:textStyle="bold"
                android:layout_alignParentEnd="true"
                android:text="ছড়া"
                android:textAlignment="center"/>
            <Button
                android:id="@+id/btn_kobita"
                android:layout_width="120dp"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_kobita"
                android:layout_alignParentEnd="true"
                android:textStyle="bold"
                android:text="চলো শিখি"/>
            <ImageView
                android:id="@+id/iv_colors"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="8dp"
                android:layout_below="@+id/btn_rhymes"
                android:src="@drawable/cv_colors"
                android:layout_alignParentStart="true"/>
            <TextView
                android:id="@+id/tv_colors"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_colors"
                android:textSize="19sp"
                android:textStyle="bold"
                android:layout_alignParentStart="true"
                android:text="এসো রঙ চিনি"
                android:textAlignment="center"/>
            <Button
                android:id="@+id/btn_colors"
                android:layout_width="120dp"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_colors"
                android:text="চলো শিখি"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                android:layout_alignParentStart="true"/>
            <ImageView
                android:id="@+id/iv_animals"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="8dp"
                android:layout_below="@+id/btn_kobita"
                android:src="@drawable/cv_animals"
                android:layout_alignParentEnd="true"/>
            <TextView
                android:id="@+id/tv_animals"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_below="@+id/iv_animals"
                android:text="চিড়িয়াখানা"
                android:textAlignment="center"
                android:textStyle="bold"
                android:layout_alignParentEnd="true"/>
            <Button
                android:id="@+id/btn_animals"
                android:layout_width="120dp"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/tv_animals"
                android:text="চলো শিখি"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"/>
















        </RelativeLayout>
    </ScrollView>

</FrameLayout>