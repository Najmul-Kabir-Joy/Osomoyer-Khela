<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment1">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">
        <RelativeLayout
            android:id="@+id/relative_view_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:padding="20dp">

            <ImageView
                android:id="@+id/iv_tictactoe"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/cv_tictac"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true" />
            <TextView
                android:id="@+id/tv_tictactoe"
                android:layout_width="120dp"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="কাটাগোল্লা"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_below="@+id/iv_tictactoe"/>
            <Button
                android:id="@+id/btn_tictactoe"
                android:layout_width="120dp"
                android:textSize="20sp"
                android:layout_height="match_parent"
                android:layout_below="@+id/tv_tictactoe"
                android:layout_alignParentStart="true"
                android:text="PLAY"/>

            <ImageView
                android:id="@+id/iv_roulette"
                android:layout_width="120dp"
                android:src="@drawable/cv_rolette"
                android:layout_height="120dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true" />
            <TextView
                android:id="@+id/tv_roulette"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="চড়কি"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_below="@+id/iv_roulette"
                android:layout_alignParentEnd="true"/>
            <Button
                android:id="@+id/btn_roulette"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/tv_roulette"
                android:textSize="20sp"
                android:text="PLAY"/>
            <ImageView
                android:id="@+id/iv_guessinggame"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/cv_gsga"
                android:layout_marginTop="8dp"
                android:layout_below="@+id/btn_tictactoe"
                android:layout_alignParentStart="true"/>
            <TextView
                android:id="@+id/tv_guessinggame"
                android:layout_width="wrap_content"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_guessinggame"
                android:textStyle="bold"

                android:text="বলো তো দেখি"
                android:textAlignment="center"
                android:layout_alignParentStart="true"/>

            <Button
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:id="@+id/btn_guessinggame"
                android:layout_below="@+id/tv_guessinggame"
                android:text="PLAY"
                android:textSize="20sp"
                android:layout_alignParentStart="true"/>
            <ImageView
                android:id="@+id/iv_bottlespinner"
                android:layout_width="120dp"
                android:src="@drawable/btl"
                android:layout_height="120dp"
                android:layout_below="@+id/btn_roulette"
                android:layout_marginTop="8dp"
                android:layout_alignParentEnd="true"/>
            <TextView
                android:id="@+id/tv_bottlespinner"
                android:layout_width="120dp"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_bottlespinner"
                android:layout_alignParentEnd="true"
                android:textAlignment="center"
                android:textStyle="bold"

                android:text="ঘুরান্টিস"/>
            <Button
                android:id="@+id/btn_bottlespinner"
                android:layout_width="120dp"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_bottlespinner"
                android:layout_alignParentEnd="true"
                android:text="PLAY"/>
            <ImageView
                android:id="@+id/iv_oddevendice"
                android:layout_width="120dp"
                android:src="@drawable/cv_dice2"
                android:layout_height="120dp"
                android:layout_below="@+id/btn_bottlespinner"
                android:layout_marginTop="8dp"
                android:layout_alignParentStart="true"/>
            <TextView
                android:id="@+id/tv_oddevendice"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_oddevendice"
                android:textSize="20sp"
                android:layout_alignParentStart="true"
                android:textAlignment="center"
                android:textStyle="bold"

                android:text="চোর জোড়"/>
            <Button
                android:id="@+id/btn_oddevendice"
                android:layout_width="120dp"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_oddevendice"
                android:text="PLAY"
                android:layout_alignParentStart="true"/>
            <ImageView
                android:id="@+id/iv_calculationgame"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/cv_calculate"
                android:layout_marginTop="8dp"
                android:layout_below="@+id/btn_bottlespinner"
                android:layout_alignParentEnd="true"/>
            <TextView
                android:id="@+id/tv_calculationgame"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_below="@+id/iv_calculationgame"
                android:text="হিসেবি"
                android:textStyle="bold"

                android:textAlignment="center"
                android:layout_alignParentEnd="true"/>
            <Button
                android:id="@+id/btn_calculationgame"
                android:layout_width="120dp"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/tv_calculationgame"
                android:text="PLAY"/>

            <ImageView
                android:id="@+id/iv_dicecoount"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/cv_dice"
                android:layout_below="@+id/btn_oddevendice"
                android:layout_alignParentStart="true"/>
            <TextView
                android:id="@+id/tv_dicecount"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_dicecoount"
                android:textSize="20sp"
                android:text="ছক্কা ছক্কা"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_alignParentStart="true"/>
            <Button
                android:id="@+id/btn_dicecount"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tv_dicecount"
                android:textSize="20sp"
                android:layout_marginBottom="10dp"
                android:text="PLAY"/>















        </RelativeLayout>
    </ScrollView>


</FrameLayout>